add_executable(
    preview-qt
    MACOSX_BUNDLE
    glwidget.cpp
    glwidget.h
    logo.cpp
    logo.h
    main.cpp
    mainwindow.cpp
    mainwindow.h
    window.cpp
    window.h
)

target_link_libraries(preview-qt Qt5::Widgets)
install(TARGETS preview-qt DESTINATION bin)
set_property(TARGET preview-qt PROPERTY FOLDER "app/gui")
